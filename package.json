{
  "name": "@smcp/root",
  "private": true,
  "homepage": "https://github.com/swordev/smcp.git",
  "bugs": {
    "url": "https://github.com/swordev/smcp.git/issues",
    "email": "juanrgm724@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swordev/smcp.git"
  },
  "license": "MIT",
  "author": {
    "name": "Juanra GM",
    "email": "juanrgm724@gmail.com",
    "url": "https://github.com/juanrgm"
  },
  "scripts": {
    "build": "wireit",
    "build:test-browser": "pnpm --filter @smcp/core-browser-test build",
    "build:ts": "wireit",
    "check": "wireit",
    "check:eslint": "eslint .",
    "check:format": "prettier -c .",
    "clean": "wireit",
    "clean:ts": "wireit",
    "clean:wireit": "wireit",
    "compose": "wspa compose",
    "format": "prettier -w .",
    "postinstall": "wspa compose",
    "test": "wireit",
    "test:browser": "pnpm --filter @smcp/core-browser-test test",
    "test:node": "jest",
    "watch": "tsc --build tsconfig.build.json -w"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@wspa/cli": "^0.6.0",
    "@wspa/config": "^0.3.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.24.0",
    "husky": "^8.0.1",
    "jest": "29.1.2",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.3.0",
    "prettier-plugin-sort-json": "^0.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "wireit": "^0.7.2"
  },
  "engines": {
    "node": ">=16.5.0"
  },
  "wireit": {
    "test": {
      "dependencies": [
        "test:node",
        "test:browser"
      ]
    },
    "check": {
      "dependencies": [
        "check:eslint",
        "check:format"
      ]
    },
    "clean": {
      "dependencies": [
        "clean:ts",
        "clean:wireit"
      ]
    },
    "clean:ts": {
      "command": "rimraf packages/*/lib packages/*/dist packages/*/tsconfig.tsbuildinfo"
    },
    "clean:wireit": {
      "command": "rimraf .wireit"
    },
    "build": {
      "dependencies": [
        "build:ts",
        "build:test-browser"
      ]
    },
    "build:ts": {
      "command": "tsc -b tsconfig.build.json --pretty",
      "clean": "if-file-deleted",
      "files": [
        "packages/*/src/**/*.ts",
        "packages/*/src/tsconfig.json"
      ],
      "output": [
        "packages/*/lib/**",
        "packages/*/.tsbuildinfo"
      ],
      "packageLocks": [
        "pnpm-lock.yaml"
      ]
    }
  },
  "x-wspa": {
    "extends": "@wspa/config/auto",
    "pkgManifest": {
      "homepage": "https://github.com/swordev/smcp#readme",
      "bugs": {
        "url": "https://github.com/swordev/smcp/issues"
      },
      "repository": {
        "type": "git",
        "url": "https://github.com/swordev/smcp"
      },
      "license": "MIT",
      "author": {
        "name": "Juanra GM",
        "email": "juanrgm724@gmail.com",
        "url": "https://github.com/juanrgm"
      }
    }
  }
}
